<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/load_baidu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BaiduWebView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/load_js_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android调用Js"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/load_js_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Js调用Android_方式一"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/load_js_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Js调用Android_方式二"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/load_js_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Js调用Android_方式三"
            android:textAllCaps="false" />
    </LinearLayout>

</ScrollView>